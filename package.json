{
  "name": "zed-theme-utils-workspace",
  "private": true,
  "version": "0.1.0",
  "description": "A tool to to parse, validate and italicize Zed editor themes",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm -r --filter='./packages/*' run build",
    "build:types": "pnpm -r --filter='./packages/*' run build:types",
    "cli": "pnpm --filter='./packages/cli' run start",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "typecheck": "pnpm -r --filter='./packages/*' run typecheck",
    "lint": "pnpm -r --parallel --filter='./packages/*' run lint",
    "lint:check": "pnpm -r --parallel --filter='./packages/*' run lint:check",
    "format": "pnpm -r --parallel --filter='./packages/*' run format",
    "format:check": "pnpm -r --parallel --filter='./packages/*' run format:check",
    "validate": "pnpm -r --parallel --filter='./packages/*' run validate"
  },
  "keywords": [
    "zed",
    "theme",
    "editor",
    "italic"
  ],
  "author": "Andrey Loginov <andrey12q112@gmail.com> (https://choconao.me)",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/parser": "^8.46.3",
    "esbuild": "^0.25.12",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.39.1",
    "eslint-config-love": "^133.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
